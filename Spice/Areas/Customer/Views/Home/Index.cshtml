@model Spice.Models.ViewModels.IndexHomeVM
@*<div class="container-fluid">*@
@if (Model.ListBestSellerMenuItem.Count() > 0 || Model.ListNews.Count() > 0)
{
    <!--? slider Area Start -->
    <div class="slider-area ">
        <div class="slider-active">
            @for (int i = 0; i < Model.ListBestSellerMenuItem.Count(); i++)
            {
                <!-- Single Slider -->
                <div class="single-slider slider-height d-flex align-items-center slide-bg">
                    <div class="container">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                                <div class="hero__caption">
                                    <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">Select Your New Perfect Style</h1>
                                    @*<p data-animation="fadeInLeft" data-delay=".7s" data-duration="2000ms"> @Model.ListBestSellerMenuItem.ElementAt(i).Description</p>*@
                                    <!-- Hero-btn -->
                                    <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                        <a class="btn hero-btn" asp-action="Details" asp-controller="Home" asp-area="Customer" asp-route-id=@Model.ListBestSellerMenuItem.ElementAt(i).Id>Click For Detail</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                                <div class="hero__img" data-animation="bounceIn" data-delay=".4s">
                                    <img src=@Model.ListBestSellerMenuItem.ElementAt(i).Image alt=@Model.ListBestSellerMenuItem.ElementAt(i).Name class="heartbeat">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @for (int i = 0; i < Model.ListNews.Count(); i++)
            {
                <!-- Single Slider -->
                <div class="single-slider slider-height d-flex align-items-center slide-bg">
                    <div class="container">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                                <div class="hero__caption">
                                    <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">@Model.ListNews.ElementAt(i).Header</h1>
                                    @*<p data-animation="fadeInLeft" data-delay=".7s" data-duration="2000ms"> @Model.ListNews.ElementAt(i).Content.Substring(0, 25) + "..."</p>*@
                                    <!-- Hero-btn -->
                                    <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                        <a class="btn hero-btn" asp-action="NewsPost" asp-controller="NewsPost" asp-area="Customer" asp-route-id=@Model.ListNews.ElementAt(i).Id>Click For Detail</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                                <div class="hero__img" data-animation="bounceIn" data-delay=".4s">
                                    <img src=@Model.ListNews.ElementAt(i).ImageHeader alt=@Model.ListNews.ElementAt(i).Header class="heartbeat">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<!-- slider Area End-->
<!-- ? New Product Start -->
@if (Model.ListNewMenuItem.Count() > 2)
{
    <section class="new-product-area section-padding30">
        <div class="container">
            <!-- Section tittle -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-tittle mb-70">
                        <h2>New Arrivals</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                        <div class="single-new-pro mb-30 text-center">
                            <div class="product-img">
                                <img src=@Model.ListNewMenuItem.ElementAt(i).Image alt="@Model.ListNewMenuItem.ElementAt(i).Name">
                            </div>
                            <div class="product-caption">
                                <h3><a asp-action="Details" asp-controller="Home" asp-area="Customer" asp-route-id=@Model.ListNewMenuItem.ElementAt(i).Id> @Model.ListNewMenuItem.ElementAt(i).Name</a></h3>
                                <span>$ @Model.ListNewMenuItem.ElementAt(i).Price</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
<!--  New Product End -->
<!--? Gallery Area Start -->
<div class="gallery-area">
    <div class="container-fluid p-0 fix">
        <div class="row">
            <div class="col-xl-6 col-lg-4 col-md-6 col-sm-6">
                <div class="single-gallery mb-30">
                    <div class="gallery-img big-img" style="background-image: url(assets/img/gallery/gallery1.png);"></div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                <div class="single-gallery mb-30">
                    <div class="gallery-img big-img" style="background-image: url(assets/img/gallery/gallery2.png);"></div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-12">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-6 col-sm-6">
                        <div class="single-gallery mb-30">
                            <div class="gallery-img small-img" style="background-image: url(assets/img/gallery/gallery3.png);"></div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12  col-md-6 col-sm-6">
                        <div class="single-gallery mb-30">
                            <div class="gallery-img small-img" style="background-image: url(assets/img/gallery/gallery4.png);"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Gallery Area End -->
<!--? Popular Items Start -->
@if (Model.ListPopularMenuItem.Count() > 2)
{
    <div class="popular-items section-padding30">
        <div class="container">
            <!-- Section tittle -->
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8 col-md-10">
                    <div class="section-tittle mb-70 text-center">
                        <h2>Popular Items</h2>
                        <p>Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse ultrices gravida.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                        <div class="single-popular-items mb-50 text-center">
                            <div class="popular-img">
                                <img src=@Model.ListPopularMenuItem.ElementAt(i).Image alt="">
                                <div class="img-cap">
                                    <a asp-action="Details" asp-controller="Home" asp-area="Customer" asp-route-id=@Model.ListPopularMenuItem.ElementAt(i).Id><span>Click for detail</span></a>
                                </div>
                                <div class="favorit-items">
                                    <span class="flaticon-heart"></span>
                                </div>
                            </div>
                            <div class="popular-caption">
                                <h3><a asp-action="Details" asp-controller="Home" asp-area="Customer" asp-route-id=@Model.ListPopularMenuItem.ElementAt(i).Id>@Model.ListPopularMenuItem.ElementAt(i).Name</a></h3>
                                <span>$ @Model.ListPopularMenuItem.ElementAt(i).Price</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Button -->
            <div class="row justify-content-center">
                <div class="room-btn pt-70">
                    <a asp-action="Index" asp-controller="ProductsList" asp-area="Customer" class="btn view-btn1">View More Products</a>
                </div>
            </div>
        </div>
    </div>
}
<!-- Popular Items End -->
<!--? Video Area Start -->
<div class="video-area">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="video-wrap">
                    <div class="play-btn "><a class="popup-video" href="https://www.youtube.com/watch?v=kLKxwA8ZS6E"><i class="fas fa-play"></i></a></div>
                </div>
            </div>
        </div>
        <!-- Arrow -->
        <div class="thumb-content-box">
            <div class="thumb-content">
                <h3>Next Video</h3>
                <a href="#"> <i class="flaticon-arrow"></i></a>
            </div>
        </div>
    </div>
</div>
<!-- Video Area End -->
