@model Spice.Models.ViewModels.ProductsListViewModel
@using Spice.Extensions

@{
    ViewData["Title"] = "Index";
}

<!-- Hero Area Start-->
<div class="slider-area ">
    <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Watch Shop</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero Area End-->
<!-- Latest Products Start -->
<section class="popular-items latest-padding">
    <div class="container">
        <div class="row product-btn justify-content-between mb-40">
            <div class="properties__button">
                <!--Nav Button  -->
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a asp-controller="ProductsList" asp-action="Index" asp-route-orderBy="descDate" class="nav-item nav-link active" id="nav-descDate-tab">NewestArrivals</a>
                        <a asp-controller="ProductsList" asp-action="Index" asp-route-orderBy="descPrice" class="nav-item nav-link" id="nav-descPrice-tab"> Price high to low</a>
                        <a asp-controller="ProductsList" asp-action="Index" asp-route-orderBy="mostPopuler" class="nav-item nav-link" id="nav-mostPopuler-tab">Most populer </a>
                    </div>
                </nav>
                <!--End Nav Button  -->
            </div>
            <!-- Grid and List view -->
            <div class="grid-list-view">
            </div>
            <!-- Select items -->
            <div class="select-this">
                <form id="formPageSize" method="get" asp-controller="ProductsList" asp-action="Index" asp-route-orderBy="descDate">
                    <div class="select-itms">
                        <select name="pageSize" id="select1">
                            <option value="10">10 per page</option>
                            <option value="20">20 per page</option>
                            <option value="30">30 per page</option>
                            <option value="40">40 per page</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
        <!-- Nav Card -->
        <div class="tab-content" id="nav-tabContent">
            <!-- card one -->
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                            <div class="single-popular-items mb-50 text-center">
                                <div class="popular-img">
                                    <a class="product-image" asp-action="Details" asp-controller="Home" asp-route-id="@product.Id"><img src="@product.Image"></a>
                                    <div class="img-cap">
                                        <span><a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">Add to cart</a></span>
                                    </div>
                                    <div class="favorit-items">
                                        <span class="flaticon-heart"></span>
                                    </div>
                                </div>
                                <div class="popular-caption">
                                    <h3><a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">@product.Name</a></h3>
                                    <span>$ @product.Price</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- End Nav Card -->
    </div>
    <form method="get">
        <div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="page-link"
             page-class-normal="" page-class-selected="active btn-primary"
             class="btn-group float-right">
        </div>
    </form>
</section>

<!-- Latest Products End -->
