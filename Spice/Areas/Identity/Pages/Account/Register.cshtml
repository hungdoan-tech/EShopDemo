@page
@model RegisterModel
@using Spice.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = "Register";
    if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.RepositoryManager) || User.IsInRole(SD.Shipper))
    {
        Layout = "~/Views/Shared/_AdminDashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <br />
            <h2 class="text-info">Create a New Account</h2>
            <br />
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.Name" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.Email" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.StreetAddress" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.StreetAddress" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.City" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.City" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.State" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.State" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.PostalCode" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.PostalCode" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.Password" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:50px;width:400px">
                                <input asp-for="Input.Password" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <div style="height:100px;width:400px">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    @if (User.IsInRole(SD.ManagerUser))
                    {
                        <div class="form-group row">
                            <div class="col-2">
                            </div>
                            <div class="col-5">
                                <input type="radio" name="rdUserRole" value="@SD.RepositoryManager" checked /> @SD.RepositoryManager
                                <input type="radio" name="rdUserRole" value="@SD.Shipper" checked /> @SD.Shipper
                            </div>
                        </div>
                    }

                    <div class="form-group row">
                        <div class="col-5 offset-2">
                            <div style="height:50px;width:400px">
                                <button type="submit" class="btn btn-primary form-control">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
