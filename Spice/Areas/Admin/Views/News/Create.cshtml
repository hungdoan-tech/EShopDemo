@model Spice.Models.ViewModels.NewsViewModel
@using Spice.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Simple Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../lib/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<div id="content">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <br />
            <h2 class="text-info">Create News</h2>
            <br />

            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="border backgroundWhite">
                    <div class="container-fluid">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="News.Header" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="News.Header" class="form-control" />
                            </div>
                            <span asp-validation-for="News.Header" class="text-danger"></span>
                        </div>
                        @*<div class="form-group row">

                        <div class="col-2">
                            <label asp-for="News.ApplicationUserId" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="@Model.News.ApplicationUserId" id="ApplicationUserId" asp-items="Model.ApplicationUsers.ToSelectListItem(Model.News.ApplicationUserId)" class="form-control"></select>
                        </div>
                    </div>*@

                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="News.Alias" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="News.Alias" class="form-control" />
                            </div>
                            <span asp-validation-for="News.Alias" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="News.PublishedDate" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input id="today" type="date" asp-for="News.PublishedDate" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="News.PublishedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="News.Type" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <select asp-for="News.Type" id="TypeField" asp-items="Html.GetEnumSelectList<News.EType>()" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row" id="MenuItemField">
                            <div class="col-2">
                                <label asp-for="News.MenuItem" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <select id="valueOfMenuItem" asp-for="News.MenuItemId" asp-items="Model.MenuItems.ToSelectListItem(Model.News.MenuItemId)" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <div class="col-2">
                                <label asp-for="News.Content" class="col-form-label"></label>
                            </div>
                            <textarea id="editor1" asp-for="News.Content"></textarea>
                            <span asp-validation-for="News.Content" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="News.ImageHeader" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input type="file" name="files" multiple class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-5 offset-2">
                            <partial name="_CreateAndBackToListButton" />
                        </div>
                    </div>
                </div>
            </form>


            @section Scripts{

                <script>
                    $(document).ready(function () {

                        $("#TypeField").click(function () {
                            if ($(this).val() == 0) {
                                $("#valueOfMenuItem").val($("#valueOfMenuItem option:first").val());
                                $("#MenuItemField").show();
                            } else {
                                $("#valueOfMenuItem").val(null);
                                $("#MenuItemField").hide();
                            }
                        });
                    });
                </script>
                <script type="text/javascript">
                    CKEDITOR.replace('editor1', { width: 1000, height: 700 });
                </script>
                <script>
                    document.querySelector("#today").valueAsDate = new Date()
                                //document.getElementById("today").valueAsDate = new Date();


                </script>
                <script src="//cdn.ckeditor.com/4.14.1/full/ckeditor.js"></script>

                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </nav>
</div>