@model Spice.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Delete";
}


<br />
<h2 class="text-info">Delete News</h2>
<br />
<script src="//cdn.ckeditor.com/4.14.1/full/ckeditor.js"></script>
<form method="post">
    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <input type="hidden" asp-for="News.Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="News.Header" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="News.Header" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="News.DatePublished" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="News.DatePublished" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="News.Author" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="News.Author" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="News.NewsCategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="News.NewsCategory.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="News.Content" class="custom-label"></label>
                    </div>
                        <textarea id="editor1" asp-for="News.Content" readonly></textarea>
                </div>
            </fieldset>
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.News.Id" />
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    CKEDITOR.replace('editor1', { width: 1000, height: 700 });
</script>
