@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}




<link rel="stylesheet" href="/css/Table.css" >
<div id="content">
    <nav class="navbar navbar-default" style="background-color: white">
        <div class="container-fluid">
            <br />
            <h2 class="text-info"> Menu Item List</h2>
            <br />
            <div>
                <div class="row">
                    <div class="col-6 text-right">
                        <partial name="_CreateButtonPartial" />
                    </div>
                </div>
                <br />
                <div>
                    <div class="container-fluid">
                        @if (Model.Count() > 0)
                        {
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Price)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(m => m.Category)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.SubCategory)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Quantity)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.IsPublish)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Tag)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.PublishedDate)
                                        </th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(m => item.Name) 
                                                <br/>
                                                <img src = "@Html.DisplayFor(m => item.Image)" class="img-index" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Category.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.SubCategory.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.IsPublish)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Tag)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.PublishedDate)
                                            </td>
                                            <td>
                                                <partial name="_TableButtonPartial" model="item.Id" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No menu item exists...</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>
