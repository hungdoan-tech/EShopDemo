@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>AdminLTE 3 | Simple Tables</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="../../lib/fontawesome-free/css/all.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
<div id="content">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <br />
            <h2 class="text-info"> Menu Item List</h2>
            <br />
            <div class="border backgroundWhite">
                <div class="row">
                    <div class="col-6 text-right">
                        <partial name="_CreateButtonPartial" />
                    </div>
                </div>
                <br />
                <div>
                    <div class="container-fluid">
                        @if (Model.Count() > 0)
                        {
                        <table class="table table-striped border">
                            <div class="container-fluid">
                                <tr class="table-secondary">
                                    <th>
                                        @Html.DisplayNameFor(m => m.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.Price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.CategoryId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.SubCategoryId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.Quantity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.IsPublish)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.Tag)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(m => m.PublishedDate)
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Category.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.SubCategory.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayNameFor(m => m.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayNameFor(m => m.IsPublish)
                                        </td>
                                        <td>
                                            @Html.DisplayNameFor(m => m.Tag)
                                        </td>
                                        <td>
                                            @Html.DisplayNameFor(m => m.PublishedDate)
                                        </td>
                                        <td>
                                            <partial name="_TableButtonPartial" model="item.Id" />
                                        </td>
                                    </tr>
                                }
                                </div>
                        </table>
                        }
                        else
                        {
                            <p>No menu item exists...</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>