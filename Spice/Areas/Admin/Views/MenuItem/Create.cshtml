@model Spice.Models.ViewModels.MenuItemViewModel
@using Spice.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Simple Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../lib/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<div id="content">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <br />
            <h2 class="text-info">Create MenuItem</h2>
            <br />

            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="container">
                    <div class="border backgroundWhite">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Name" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input asp-for="MenuItem.Name" class="form-control" />
                                </div>
                                <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Description" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    @Html.TextAreaFor(m => m.MenuItem.Description)
                                </div>
                                <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Price" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                 <div style="height:50px;width:400px">
                                    <input asp-for="MenuItem.Price" class="form-control" />
                                </div>
                                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Image" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input type="file" name="files" multiple class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Category" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <select asp-for="@Model.MenuItem.CategoryId" id="CategoryId" asp-items="Model.Category.ToSelectListItem(Model.MenuItem.CategoryId)" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.SubCategory" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <select asp-for="@Model.MenuItem.SubCategoryId" id="SubCategoryId" asp-items="Model.SubCategory.ToSelectListItem(Model.MenuItem.SubCategoryId)" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Color" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <select asp-for="MenuItem.Color" asp-items="Html.GetEnumSelectList<MenuItem.EColor>()" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Tag" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:100px;width:400px">
                                    <select asp-for="MenuItem.Tag" asp-items="Html.GetEnumSelectList<MenuItem.ETag>()" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MenuItem.Quantity" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input asp-for="MenuItem.Quantity" class="form-control" />
                                </div>
                                <span asp-validation-for="MenuItem.Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label class="form-check-label" asp-for="MenuItem.IsPublish" ></label>
                            </div>
                            <div class="col-5">
                                    <input class="form-check-input mx-1" asp-for="MenuItem.IsPublish" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-5 offset-2">
                                <div style="height:100px;width:400px">
                                    <partial name="_CreateAndBackToListButton" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            @section Scripts{
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: "lists",
                        menubar: 'file edit format'
                    });
                </script>
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </nav>
</div>