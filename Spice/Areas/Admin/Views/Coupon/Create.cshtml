@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Simple Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../lib/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<div id="content">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <br />
            <h2 class="text-info">Create Coupon</h2>
            <br />

            <form method="post">
                <div class="container">
                    <div class="border backgroundWhite">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Name" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="CouponType" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="Discount" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input asp-for="Discount" class="form-control" />
                                </div>
                                <span asp-validation-for="Discount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="MinimumAmount" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input asp-for="MinimumAmount" class="form-control" />
                                </div>
                                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-2">
                                <label class="form-check-label" asp-for="IsActive"></label>
                            </div>
                            <div class="col-5">
                                <div style="height:50px;width:400px">
                                    <input class="form-check-input mx-1" type="checkbox" asp-for="IsActive">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-5 offset-2">
                                <div style="height:100px;width:400px">
                                    <partial name="_CreateAndBackToListButton" />
                                </div>
                            </div>
                         </div>
                    </div>
                </div>           
            </form>

            @section Scripts{
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </nav>
</div>