@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Simple Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../lib/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<div id="content">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <br />
            <h2 class="text-info">Coupon Details</h2>
            <br />
            <div class="row  backgroundWhiteBorder">
                <div class="container">
                    <br />
                    <div class=" col-12 border">
                        @{
                            var base64 = Convert.ToBase64String(Model.Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img src="@imgsrc" height="100%" width="100%" />
                    </div>
                    <div class="col-12 pt-4">
                        <fieldset disabled>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label asp-for="Name" class="custom-label"></label>
                                </div>
                                <div class="col-5">
                                    <div style="height:100px;width:400px">
                                        <input asp-for="Name" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label asp-for="CouponType" class="custom-label"></label>
                                </div>
                                <div class="col-5">
                                    <div style="height:100px;width:400px">
                                        <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label asp-for="Discount" class="custom-label"></label>
                                </div>
                                <div class="col-5">
                                    <div style="height:100px;width:400px">
                                        <input asp-for="Discount" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label asp-for="MinimumAmount" class="custom-label"></label>
                                </div>
                                <div class="col-5">
                                    <div style="height:100px;width:400px">
                                        <input asp-for="MinimumAmount" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-2">
                                    <label asp-for="IsActive" class="custom-label"></label>
                                </div>
                                <div class="col-5">
                                    <div style="height:100px;width:400px">
                                        <input type="checkbox" asp-for="IsActive" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <br />

                        <div class="form-group row">
                            <div class="col-5 offset-2">
                                <div style="height:100px;width:400px">
                                    <partial name="_DetailsAndBackToListButton" model="@Model.Id" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>