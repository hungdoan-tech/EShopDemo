@model IEnumerable<News>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Count() > 0)
{
    <div class="container-fluid ">
        <main role="main" class="pb-3">
            <div class="container">
            <div>
                <h3 class="text-success"> News </h3>
            </div>
            <div class="col-6" style="margin-bottom:10px; margin-top:10px;padding:20px">
                <table class="col-12" border=1 frame=hsides rules=rows style="margin-bottom:10px">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="NewsPost" asp-route-Id="@item.Id" asp-controller="NewsPost">
                                    <img src="@item.ImageHeader" width="200px" style="margin-bottom:10px; border: 1px solid;" />
                                </a>
                            </td>
                            <td>
                                <a asp-action="NewsPost" asp-route-Id="@item.Id" asp-controller="NewsPost">
                                    <h4>@item.Header</h4>
                                    <p style="font-size:14px;color:gray">@item.PublishedDate</p>
                                </a>
                            </td>

                        </tr>

                    }
                </table>
            </div>
                </div>
        </main>
    </div>

}