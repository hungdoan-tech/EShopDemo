@model IEnumerable<News>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Count() > 0)
{
    <div class="col-12 ">
        <div>
            <h3 class="text-success"> News </h3>
        </div>
        <div class="border border-info rounded col-6" style="margin-bottom:10px; margin-top:10px;padding:20px">
            <table class="col-12" border=1 frame=hsides rules=rows style="margin-bottom:10px">
                @foreach (var item in Model)
                {
                <tr >               
                    <td>
                        <a @*asp-action="SpecificNews" asp-route-Id="@item.Id" asp-controller="NewsPost"*@ href="NewsPost/@item.Alias-@item.Id">
                            <img src="@item.Image" width="150px" style="margin-bottom:10px; border: 1px solid;" />
                        </a>
                    </td>
                    <td>
                        <a @*asp-action="SpecificNews" asp-route-Id="@item.Id" asp-controller="NewsPost"*@ href="NewsPost/@item.Alias-@item.Id">
                            <h6>@item.Header</h6>
                            <p style="font-size:14px;color:gray">@item.DatePublished</p>
                        </a>
                    </td>
                   
                </tr>
 
                }
            </table>
        </div>

    </div>

}