@model IEnumerable<News>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Count() > 0)
{
    <div class="col-12 ">
        <div class="row">
            <h3 class="text-success"> Tin tức </h3>
        </div>
        <div class="border border-info rounded col-7" style="margin-bottom:10px; margin-top:10px" padding:10px">
            <table class="table">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.Raw(item.Header)</td>

                        <td style="color:gray">@item.DatePublished</td>
                    </tr>


                }
            </table>
        </div>
        <div class="p-4"></div>
    </div>
}